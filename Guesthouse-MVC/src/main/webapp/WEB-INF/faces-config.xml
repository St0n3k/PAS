<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

    </application>
    <navigation-rule>
        <from-view-id>/rooms.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddRoomForm</from-outcome>
            <to-view-id>/addRoom.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/clients.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddClientForm</from-outcome>
            <to-view-id>/addClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showEditClientForm</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/rents.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddRentForm</from-outcome>
            <to-view-id>/addRent.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/addClient.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showClientList</from-outcome>
            <to-view-id>/clients.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/editClient.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showClientList</from-outcome>
            <to-view-id>/clients.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/addRoom.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showRoomList</from-outcome>
            <to-view-id>/rooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/addRent.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showRentList</from-outcome>
            <to-view-id>/rents.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showRoomList</from-outcome>
            <to-view-id>/rooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showClientList</from-outcome>
            <to-view-id>/clients.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showRentList</from-outcome>
            <to-view-id>/rents.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
