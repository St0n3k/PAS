        <navigation-case>
            <from-outcome>showRoomList</from-outcome>
            <to-view-id>/rooms.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/roomDetails.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showRoomList</from-outcome>
