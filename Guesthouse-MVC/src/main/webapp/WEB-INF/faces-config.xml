<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>
            i18n.jsf_messages
        </message-bundle>

    </application>
    <navigation-rule>
        <from-view-id>/rooms.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddRoomForm</from-outcome>
            <to-view-id>/addRoom.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showRoomDetails</from-outcome>
            <to-view-id>/roomDetails.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showEditRoomForm</from-outcome>
            <to-view-id>/editRoom.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/clients.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddClientForm</from-outcome>
            <to-view-id>/addClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showEditClientForm</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showClientDetails</from-outcome>
            <to-view-id>/clientDetails.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/rents.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showAddRentForm</from-outcome>
            <to-view-id>/addRent.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/employees.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>showMainMenu</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showAddEmployeeForm</from-outcome>
            <to-view-id>/addEmployee.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>showEditEmployeeForm</from-outcome>
            <to-view-id>/editEmployee.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
